<section class="section czech-facts">
    <div class="container">
        {{ siteMacros.titleSection({
            tag: '1',
            title: post.get_field('facts_title'),
            class: 'center-mode czech-facts__title',
            size: 'lg'
        }) }}
        <div class="czech-facts__content">
            {% for item in post.get_field('facts_list') %}
                <div class="row czech-facts-item">
                    <div class="col-12 col-sm-6 czech-facts-item__image-wrapper">
                        <img
                            src="{{ item.image }}"
                            alt="{{ item.content|striptags }}"
                            class="czech-facts-item__image">
                    </div>
                    <div class="col-12 col-sm-6 col-md-5 content">
                        {{ item.content }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>