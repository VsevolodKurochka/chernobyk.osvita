<section class="section czech-steps">
    <div class="container">
        {{
            siteMacros.titleSection({
                'tag': '3',
                'size': 'md',
                'class': 'center-mode czech-steps__title',
                'title': post.get_field('steps_title')
            })
        }}
        <div class="row czech-steps__row">
            {% for step in post.get_field('steps_list') %}
                {% include "shared/step.twig" with {
                    class: 'col-12 col-sm-6 col-md-4 col-lg-3 step_arrow',
                    title: "Шаг №#{loop.index}",
                    content: step.content
                } %}
            {% endfor %}
        </div>
        <div class="czech-steps__footer">
            {{ siteMacros.buttonModal(post.get_field('steps_button').text, 'btn_brand-2') }}
        </div>
    </div>
</section>