<section class="section education-steps">
    <div class="container">
        {{
            siteMacros.titleSection({
                'tag': '3',
                'size': 'md',
                'class': 'education-steps__title',
                'title': title
            })
        }}
        <div class="row education-steps__row">
            {% for step in steps %}
                {% include "shared/step.twig" with {
                    class: 'col-12 col-sm-6 col-md-4 col-lg-3',
                    title: "Шаг №#{loop.index}",
                    content: step.text
                } %}
            {% endfor %}
        </div>
        {{
            siteMacros.titleSection({
                'tag': '4',
                'size': 'sm',
                'class': 'education-steps__subtitle',
                'title': subtitle
            })
        }}
    </div>
</section>